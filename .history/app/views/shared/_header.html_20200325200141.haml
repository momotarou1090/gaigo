.toggle-opened
  .x-button
    %i.fas.fa-times.fa-2x.x-icon
  .item-menu
    .items
      =link_to home_index_path, class:"toggle-home" do
        %i.fas.fa-home
        HOME
    .items
      =link_to "#", class:"toggle-plofile" do
        %i.fas.fa-users
        PLOFILE
    .items
      =link_to "#", class:"toggle-event" do
    .items
      =link_to "#", class:"toggle-history" do
    .items
      =link_to "#", class:"toggle-movie" do
    .items
      =link_to "#", class:"toggle-contact" do
.header-wrapper
  .header-main
    .logo_container
      =link_to (image_tag "4d24c9b49a22c259010426cd3abccb26.png",size: '120x80'), home_index_path
    .navigation
      %nav.top-menu-nav
        .toggle
          .toggle-closed
            %i.fas.fa-bars.fa-2x.toggle-icon
        %ul.nav
          %li.menu-item-home
            = link_to home_index_path, class: "header-home hover-home" do
              %i.fas.fa-home.header-icon.hover-home
              HOME
          %li.menu-item-plofile
            = link_to "#", class: "header-plofile hover-plofile" do
              %i.fas.fa-users.header-icon.hover-plofile
              PLOFILE
          %li.menu-item-event
            = link_to "#", class: "header-event hover-event" do
              %i.fas.fa-bullhorn.header-icon.hover-event
              %span EVENT
          %li.menu-item-history
            = link_to "#", class: "header-history hover-history" do
              %i.fas.fa-history.header-icon.hover-history
              HISTORY
          %li.menu-item-movie
            = link_to "#", class: "header-movie hover-movie" do
              %i.fas.fa-film.header-icon.hover-movie
              MOVIE
          %li.menu-item-contact
            = link_to "#", class: "header-contact hover-contact" do
              %i.fas.fa-envelope-square.header-icon.hover-contact
              CONTACT
